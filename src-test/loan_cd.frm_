/* Основная форма  */
FORM
   str-recid
   mDocRef
      FORMAT       "X(25)"
      LABEL        "НОМЕР ДОГОВОРА"
      HELP         "Номер договора"
   loan.loan-status
      FORMAT       "x(4)"
      COLUMN-LABEL "СТАТ"
      HELP         "Статус договора"
   cacct
      FORMAT       "x(25)"
      COLUMN-LABEL "СЧЕТ"
   loan.currency
   name-klient
      FORMAT       "x(40)"
      COLUMN-LABEL "КЛИЕНТ"
      HELP         "Наименование клиента"
   e-date
      COLUMN-LABEL "СРОК!ОПЛАТЫ"
      HELP         "Дата следующей оплаты %%"
   msumma-Doc
      FORMAT       ">>>,>>>,>>>,>>9.99"
      COLUMN-LABEL "СУММА ДОГОВОРА"
      HELP "СУММА ДОГОВОРА"
   sum-term
      FORMAT       "->>>,>>>,>>9.99"
      COLUMN-LABEL "СУММА ПРОЦЕНТОВ"
      HELP         "Сумма следующей оплаты %%"
   prosr
      FORM         "√/"
      COLUMN-LABEL "ПР"
      HELP         "Признак показывающий наличие просрочки"
WITH FRAME browse1 WIDTH 152 TITLE COLOR BRIGHT-WHITE "".

